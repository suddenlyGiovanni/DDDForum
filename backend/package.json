{
	"name": "typescript-starter",
	"version": "1.0.0",
	"description": "A basic typescript app starter for 2023.",
	"main": "index.js",
	"scripts": {
		"start:dev": "node --env-file-if-exists=.env --watch-path=./src src/index.ts",
		"start": "node --env-file-if-exists=.env src/index.ts",
		"format": "biome format --write",
		"lint": "biome lint"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run test && npm run format && npm run lint"
		}
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^18.6.1",
		"husky": "^8.0.1"
	}
}
